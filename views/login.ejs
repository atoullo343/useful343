<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">Kirish <i class="fas fa-sign-in-alt"></i></h1>
        <%- include('partials/messages') %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Email..."
            />
          </div>
          <div class="form-group">
            <label for="password">Parol</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Parol..."
            />
          </div>
          <button type="submit" class="btn btn-success btn-block">Kirish</button>
        </form>
        <p class="lead mt-4">
          Hisobingiz mavjud emasmi ? <a href="/users/register">Ro'yxatdan o'tish</a>
        </p>
      </div>
    </div>
  </div>